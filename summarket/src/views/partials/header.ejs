  <link rel="stylesheet" href="/css/styleLogin.css" type="text/css" />
  <link rel="stylesheet" href="/css/headStyle.css" type="text/css" />
  
</head>

<body>
  <header>
    
    <div class="menubar">
      <nav class="navMenu">
        <a href="/">Home</a>
        <a href="/products">Productos en Venta</a>
        <% if (locals.isLogged && locals.userLogged.rol == 'admin') { %>    
        <a href="/products/create">Crear producto</a>
        <% } %>
        <% if (locals.isLogged) { %>  
        <a class="carrito" href="/products/cart" class="button is-success">
          <i class="fa fa-shopping-cart"></i>
         <span class="clearfix d-none d-sm-inline-block">Carrito</span>
         <span class="red z-depth-1 mr-1 cart-number">0</span>
          
        </a>
         <% } %>
    
    </nav>
  </div>

    <ul class="navbar-nav align-items-center">
      <% if (locals.isLogged) { %>     

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="dropUser" role="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            <img src="/images/users/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%" />
            Hola <%= locals.userLogged.firstName %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/user/profile">Mi perfil</a>
            <li>
              <hr class="dropdown-divider" />
            </li>
            <a class="dropdown-item" href="/products/cart">Mi carrito de compras</a>
            <li>
              <hr class="dropdown-divider" />
            </li>
            <a class="dropdown-item" href="/user/logout">Cerrar Sesión</a>
            <li>
              <hr class="dropdown-divider" />
            </li>
            <% if (locals.isLogged && locals.userLogged.rol == 'admin') { %>
             <a class="dropdown-item" href="/user/admin">Administrar usuarios</a>
            <% } %>
          </ul>
        </li>

        <% } else { %>
          <div class="menubar">
            <nav class="navMenu">
            <a class="nav-link" href="/user/register">Crear cuenta</a>
            <a class="nav-link" href="/user/login">Iniciar Sesión</a>
          </div>
        </nav>

          <% } %>
    </ul>
   
    

    <div class="header">
      <!-- <div class="brand-box">
          <span class="brand">Summarket</span>
        </div> -->

      <div class="text-box">
        <h1 class="heading-primary">
          <span class="heading-primary-main">SUMMARKET</span>
          <span class="heading-primary-sub">Compras internas a emprendimientos amigos</span>
        </h1>
        <a href="#" class="btn btn-white btn-animated">Conocenos</a>
      </div>
    </div>
  </header>

