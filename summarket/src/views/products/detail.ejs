<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/styleProductDetail.css" type="text/css" />
  </head>

  <body>
    <!--product detail -->
    <header><%- include('../partials/header'); %></header>
    <div class="container-products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Produto: <%= producto.name %></h2>
          <hr />
        </div>
      </div>
      <div class="product-detail">
        <div class="row">
          <div class="col-12-col-lg-8">
            <img
              class="zoom"
              src="/images/products/<%= producto.image %>"
              alt="product image"
              class="product-detail-img"
            />
            <p class="product-detail-description">
              Descripci√≥n: <%= producto.description %>
            </p>
          </div>
        </div>
        <div class="detalles-compra">
          <p class="product-detail-price-small">
            <span>Precio: $<%= producto.price %></span>
            <b>Descuento: <%= producto.discount %>% OFF </b>
          </p>
        </div>
        <div class="col-12-col-lg-4">
          <article class="product-detail-info">
            <div>
              <button class="agregar_carrito" data-id="<%= producto.id %>">
                Agregar al carrito
              </button>
              <!-- nuevo seccion -->

              <!-- <button
                  type="button"
                  class="btn btn-outline-primary btn-lg btn-block btn-custom-color"
                  @click="addToCart"
                > -->
            </div>
            <div class="stock">
              <h4>Stock Available:<%= producto.quantity %></h4>
            </div>

            <!-- nuevo seccion -->
            <% if (locals.isLogged && locals.userLogged.rol == 'admin') { %>
            <div class="boton-editar-compra">
              <button>
                <a
                  href="/products/edit/<%= producto.id %>"
                  class="action-button edit"
                  >Editar producto</a
                >
              </button>
            </div>

            <div class="boton-eliminar">
              <form
                action="/products/delete/<%= producto.id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="action-button-delete">
                  Eliminar producto
                </button>
              </form>
            </div>
            <% } %>
          </article>
        </div>
      </div>
    </div>
    <footer><%- include('../partials/footer'); %></footer>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
      crossorigin="anonymous"
    ></script>

    <script src="/js/cart.js"></script>
  </body>
</html>
