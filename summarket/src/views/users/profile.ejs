    <h1>Mi perfil:</h1>

    <div class="card" style="width: 24rem">
      <img
        class="card-img-top"
        src="/images/users/<%= user.avatar %> "
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title">Bienvenido <%= user.firstName %></h5>
        <p class="card-text">
          Nombre: <%= user.firstName %>
          <br />
          Apellido: <%= user.lastName %>
          <br />
          Rol: <%= user.rol %>
        </p>
        <button type="button">
          <a href="/user/logout">Cerrar Sesión</a>
        </button>
      </div>
    </div>

